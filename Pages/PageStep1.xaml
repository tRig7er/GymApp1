<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymApp.PageStep1"
             Title="PageStep1" Shell.NavBarIsVisible="False" BackgroundColor="#6e9cd2" HeightRequest="700" WidthRequest="400">
    <VerticalStackLayout>
        <Label Text="Step 1/5" Style="{StaticResource txtStyle}" Margin="0,100,0,0"/>
        <Label Text="What is your purpose?" Style="{StaticResource txtStyle2}" Margin="0,30"/>

        <Button Text="      Weight Loss" Style="{StaticResource btnStyle}" x:Name="btnWeightLoss" Clicked="btnWeightLoss_Clicked"/>
        <ImageButton Source="image_weight_loss.png" Margin="-185,-86,0,30" HeightRequest="45" WidthRequest="45" Clicked="btnWeightLoss_Clicked"/>

        <Button Text="      Keeping fit" Style="{StaticResource btnStyle}" x:Name="btnKeepingFit" Clicked="btnKeepingFit_Clicked"/>
        <ImageButton Source="image_keeping_fit.png" Margin="-185,-86,0,30" HeightRequest="45" WidthRequest="45" Clicked="btnKeepingFit_Clicked"/>

        <Button Text="      Build muscle" Style="{StaticResource btnStyle}" x:Name="btnBuildMuscle" Clicked="btnBuildMuscle_Clicked"/>
        <ImageButton Source="image_build_muscle.png"  Margin="-185,-86,0,30" HeightRequest="45" WidthRequest="45" Clicked="btnBuildMuscle_Clicked"/>
    </VerticalStackLayout>
</ContentPage>